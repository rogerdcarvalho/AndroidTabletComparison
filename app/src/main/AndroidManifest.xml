<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.rcarvalho.tabletcomparison" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".TabletSelection"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".TabletComparison"
            android:label="@string/title_activity_tablet_comparison"
            android:parentActivityName=".TabletSelection" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.rcarvalho.tabletcomparison.TabletSelection" />
        </activity>
        <activity
            android:name=".TabletDetails"
            android:label="@string/title_activity_tablet_details" >
        </activity>
    </application>

</manifest>
